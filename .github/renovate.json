{
  "extends": [
    "config:base",
    "docker:pinDigests",
    "regexManagers:dockerfileVersions",
    "schedule:earlyMondays"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "matchPackageNames": ["postgres"],
      "enabled": false
    },
    {
      "matchPackageNames": ["postgres"],
      "groupName": "postgres"
    },
    {
      "matchUpdateTypes": ["patch", "minor"],
      "groupName": "dependencies"
    }
  ]
}
